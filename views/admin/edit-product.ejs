<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="container">

        <form class="form" action="/admin/<% if (editing) {%>edit-product<%} else{ %>add-product<% } %>" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Enter title" value="<% if (editing) {%><%= product.title%><% } %>">
            </div>
            <div class="form-group">
                <label for="Category">Category</label>
                <input type="text" class="form-control" name="category" id="category" placeholder="Enter category" value="<% if (editing) {%><%= product.category%><% } %>">
            </div>
            <div class="form-group">
                <label for="desciption">Description</label>
                <input type="text" class="form-control" name="description" id="desciption" placeholder="Enter desciption" value="<% if (editing) {%><%= product.description%><% } %>">
            </div>
            
            <div class="form-group">
                <label for="in_stock">In Stock</label>
                <input type="number" class="form-control" name="in_stock" id="in_stock" placeholder="Enter Stock detail" value="<% if (editing) {%><%= product.in_stock%><% } %>">
            </div>

            <button type="submit" class="btn btn-primary"><% if (editing) {%>Edit-product<%} else{ %>Add-product<% } %></button>

            <% if (editing) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
            <% } %>
        </form>     
    </div>

    <%- include('../includes/end.ejs') %>